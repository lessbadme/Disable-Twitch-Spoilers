{
  "manifest_version": 3,
  "name": "Twitch Spoiler Blocker",
  "version": "1.0.0",
  "description": "Avoid spoilers on Twitch by hiding thumbnails, VOD lengths, titles, and hover previews",

  "permissions": ["storage"],

  "host_permissions": ["*://*.twitch.tv/*"],

  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": [
        "src/shared/constants.js",
        "src/shared/storage.js",
        "src/content/selectors.js",
        "src/content/spoiler-blocker.js",
        "src/content/content.js"
      ],
      "css": ["src/content/content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Twitch Spoiler Blocker"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-spoiler-blocker@spoilerwarning.dev",
      "strict_min_version": "109.0"
    }
  }
}
